<%- include("partials/header.ejs") %> 


<div class="ui main text container segment">
    <div class="ui huge header centered"><%= blog.title %> </div>
    <div class="ui top attatched">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <p><%= blog.created.toDateString() %></p>
            </div>
            <div class="description">
                <p><%- blog.body %> </p>
            </div>
            <div id="edit-del-box">
                <a href="/blogs/<%= blog._id %>/edit" class="ui item large blue button">Edit</a>
                <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" class="item">
                    <button class="ui centered large red button">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>


<%- include("partials/footer.ejs") %> 
